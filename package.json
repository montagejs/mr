{
  "name": "mr",
  "version": "17.0.12",
  "description": "A refresh-only CommonJS module system for browsers, used in Montage",
  "license": "BSD-3-Clause",
  "keywords": [
    "montage",
    "require",
    "commonjs",
    "module",
    "modules",
    "loader"
  ],
  "engines": {
    "node": "<=4.9.1",
    "npm": "<=2.15.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/montagejs/mr.git"
  },
  "browser": {
      "url": "./mini-url.js"
  },
  "scripts": {
    "build": "npm run build-boot && npm run build-preload",
    "build-boot": "node bin/mrs.js boot/browser.js -e '().done()' > boot.js",
    "build-preload": "node bin/mrs.js boot/preload-entry.js > boot/preload-boilerplate.js",
    "test": "npm run build && node test/run-node.js",
    "lint": "jshint .",
    "integration": "mop-integration",
    "test:karma": "npm run build && karma start --no-auto-watch --single-run",
    "test:jasmine": "npm run build && concurrently \"http-server -p 8081\" \"open http://localhost:8081/test/run.html\"",
    "test:demo": "concurrently \"http-server -a localhost -p 8082\" \"open http://localhost:8082/demo/\""
  },
  "bin": {
    "mr": "bin/mr.js",
    "mrs": "bin/mrs.js"
  },
  "production": true,
  "dependencies": {
    "bluebird": "~3.4.7",
    "optimist": "~0.6.0"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "http-server": "^0.9.0",
    "jasmine-console-reporter": "^1.2.7",
    "jasmine-core": "^2.5.2",
    "jshint": "^2.9.5",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "mop-integration": "git://github.com/montagejs/mop-integration.git#master",
    "open": "0.0.5"
  },
  "exclude": [
    "README.md",
    "CHANGES.md",
    "LICENSE.md",
    "bootstrap-node.js",
    "node.js",
    "adhoc.*",
    "bin",
    "demo",
    "test"
  ]
}
