{
  "name": "mr",
  "version": "16.0.5",
  "description": "A refresh-only CommonJS module system for browsers, used in Montage",
  "keywords": [
    "montage",
    "require",
    "commonjs",
    "module",
    "modules",
    "loader"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/montagejs/mr.git"
  },
  "main": "require",
  "scripts": {
    "test": "jasmine-node spec/node-spec.js && node spec/phantom.js && jshint .",
    "integration": "mop-integration"
  },
  "bin": {
    "mr": "bin/mr"
  },
  "production": true,
  "dependencies": {
    "bluebird":"~3.4.6"
  },
  "devDependencies": {
    "qs": "~0.6.5",
    "joey": "~1.3.0",
    "istanbul": "~0.1.34",
    "q-io": "~1.10.1",
    "jshint": "~2.1.4",
    "jasmine-node": "~1.11.0",
    "phantom-wd": "~0.0.2",
    "mop-integration": "git://github.com/montagejs/mop-integration.git#master"
  },
  "exclude": [
    "README.md",
    "CHANGES.md",
    "LICENSE.md",
    "bootstrap-node.js",
    "node.js",
    "adhoc.*",
    "bin",
    "demo",
    "spec"
  ]
}
