{
  "name": "mr",
  "version": "0.13.4",
  "description": "A refresh-only CommonJS module system for browsers, used in Montage",
  "keywords": [
    "montage",
    "require",
    "commonjs",
    "module",
    "modules",
    "loader"
  ],
  "browser": {
    "url": "./mini-url.js"
  },
  "scripts": {
    "build": "npm run build-boot && npm run build-preload",
    "build-boot": "node bin/mrs.js boot/browser.js -e '().done()' > boot.js",
    "build-preload": "node bin/mrs.js boot/preload-entry.js > boot/preload-boilerplate.js",
    "test": "npm run build && npm run node-test && npm run browser-test  && npm run lint",
    "node-test": "jasmine-node spec/node-spec.js",
    "browser-test": "node spec/phantom.js",
    "lint": "jshint require.js browser.js node.js",
    "integration": "MOP_VERSION=~0.13 MR_VERSION=. mop-integration"
  },
  "bin": {
    "mr": "bin/mr.js",
    "mrs": "bin/mrs.js"
  },
  "dependencies": {
    "q": "0.9.6",
    "optimist": "~0.6.0"
  },
  "devDependencies": {
    "qs": "~0.5.3",
    "wd": "~0.0.31",
    "joey": "~0.1.3",
    "istanbul": "~0.1.34",
    "q-io": "~1.6.4",
    "jshint": "~2.1.4",
    "jasmine-node": "~1.10.2",
    "mop-integration": "git://github.com/montagejs/mop-integration.git#master"
  },
  "exclude": [
    "README.md",
    "CHANGES.md",
    "LICENSE.md",
    "bootstrap-node.js",
    "node.js",
    "adhoc.*",
    "bin",
    "demo",
    "spec"
  ]
}
